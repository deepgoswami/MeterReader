<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="commgate.in.meterreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="9"
        android:minSdkVersion="8"
        android:targetSdkVersion="3" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="commgate.in.meterreader.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="commgate.in.meterreader.BluetoothSelector"
            android:label="@string/title_activity_bluetooth_selector" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.PrintSelector"
            android:label="@string/title_activity_print_selector" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.Preferences"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.FileDownload"
            android:label="@string/title_activity_file_download" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.ChooseAction"
            android:label="@string/title_activity_choose_action" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.ChooseConsumerNumber"
            android:label="@string/title_activity_choose_consumer_number" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.ShowBill"
            android:label="@string/title_activity_show_bill" >
        </activity>
        <activity
            android:name="commgate.in.meterreader.MeterReading"
            android:label="@string/title_activity_meter_reading" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" >
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>